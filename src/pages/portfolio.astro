---
import BaseLayout from '../layouts/BaseLayout.astro';
import PortfolioPost from '../components/PortfolioPost.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "My Astro Learning Blog";
---
<BaseLayout pageTitle={pageTitle}>
  <p>This is where I will post about my design journey over the next couple of years...</p>

  <ul>
  {allPosts.map((post) => <PortfolioPost url={post.url} title={post.frontmatter.title} />)}
</ul>

</BaseLayout>
